{
  "language": "zh-cn",
  "intents": {
    "HassTurnOff": {
      "data": [
        {
          "sentences": [
            "<turn_off> <area> (风扇 | 吊扇)",
            "[<let>] <area> (风扇 | 吊扇) <turn_off>"
          ],
          "slots": {
            "domain": "fan",
            "name": "all"
          },
          "response": "fans_area"
        },
        {
          "sentences": [
            "<turn_off> [<area>] {name}",
            "[<let>] [<area>] {name} <turn_off>"
          ],
          "excludes_context": {
            "domain": "cover"
          }
        },
        {
          "sentences": [
            "<turn_off> <area> <light>",
            "[<let>] <area> <light> <turn_off>"
          ],
          "slots": {
            "domain": "light"
          },
          "response": "lights_area"
        },
        {
          "sentences": [
            "<close> [<area>] {name}",
            "<let> [<area>] {name} <close>"
          ],
          "requires_context": {
            "domain": "cover"
          }
        },
        {
          "sentences": [
            "<close> <area> (窗帘 | 卷帘 | 百叶窗)",
            "[<let>] <area> (窗帘 | 卷帘 | 百叶窗) <close>"
          ],
          "slots": {
            "domain": "cover",
            "device_class": [
              "blind",
              "curtain",
              "shutter"
            ]
          },
          "response": "cover_area"
        },
        {
          "sentences": [
            "<close> <area> ([卷闸]门)",
            "[<let>] <area> ([卷闸]门) <close>"
          ],
          "slots": {
            "domain": "cover",
            "device_class": "garage"
          },
          "response": "cover_door"
        },
        {
          "sentences": [
            "<close> <area> (窗户)",
            "[<let>] <area> (窗户) <close>"
          ],
          "slots": {
            "domain": "cover",
            "device_class": "window"
          },
          "response": "cover_window"
        }
      ]
    },
    "HassGetState": {
      "data": [
        {
          "sentences": [
            "[<area>] <name> [状态] (<what_is>|<how_many_is>)",
            "[<area>] <name> [<what_is>] (状态)"
          ],
          "response": "one"
        },
        {
          "sentences": [
            "[<area>] {name} (是不是) {on_off_states:state}",
            "[<area>] {name} [是] {on_off_states:state} [吗|不]"
          ],
          "response": "one_yesno",
          "excludes_context": {
            "domain": [
              "cover"
            ]
          }
        },
        {
          "sentences": [
            "[{area}] [有|有没有] {on_off_domains:domain} [是|是不是] {on_off_states:state} [吗|不]"
          ],
          "response": "any"
        },
        {
          "sentences": [
            "[<area>] [<all>] {on_off_domains:domain} [是|是不是]都[是] {on_off_states:state} [吗|不]"
          ],
          "response": "all"
        },
        {
          "sentences": [
            "[<area>] <which> {on_off_domains:domain} [是] {on_off_states:state}",
            "<which> [<area>] {on_off_domains:domain} [是] {on_off_states:state}"
          ],
          "response": "which"
        },
        {
          "sentences": [
            "[{area}] <how_many_is> {on_off_domains:domain} [是] {on_off_states:state}",
            "<how_many_is> [<area>] {on_off_domains:domain} [是] {on_off_states:state}"
          ],
          "response": "how_many"
        },
        {
          "sentences": [
            "[<area>] {name} (是|是不是) {cover_states:state} [吗|不]"
          ],
          "response": "one_yesno",
          "requires_context": {
            "domain": "cover"
          },
          "slots": {
            "domain": "cover"
          }
        },
        {
          "sentences": [
            "[{area}] [有|有没有] {cover_classes:device_class} [是|是不是] {cover_states:state} [吗|不]"
          ],
          "response": "any",
          "slots": {
            "domain": "cover"
          }
        },
        {
          "sentences": [
            "[<area>] [<all>] {cover_classes:device_class} [是|是不是]都[是] {cover_states:state} [吗|不]",
            "<all> <area> {cover_classes:device_class} [是|是不是]都[是] {cover_states:state} [吗|不]"
          ],
          "response": "all",
          "slots": {
            "domain": "cover"
          }
        },
        {
          "sentences": [
            "[<area>] <which> {cover_classes:device_class} [是] {cover_states:state}",
            "<which> [<area>] {cover_classes:device_class} [是] {cover_states:state}"
          ],
          "response": "which",
          "slots": {
            "domain": "cover"
          }
        },
        {
          "sentences": [
            "[{area}] <how_many_is> {cover_classes:device_class} [是] {cover_states:state}",
            "<how_many_is> [<area>] {cover_classes:device_class} [是] {cover_states:state}"
          ],
          "response": "how_many",
          "slots": {
            "domain": "cover"
          }
        }
      ]
    },
    "HassTurnOn": {
      "data": [
        {
          "sentences": [
            "<turn_on> <area> <light>",
            "[<let>] <area> <light> <turn_on>"
          ],
          "slots": {
            "domain": "light"
          },
          "response": "lights_area"
        },
        {
          "sentences": [
            "<open> [<area>] {name}",
            "<let> [<area>] {name} <open>"
          ],
          "requires_context": {
            "domain": "cover"
          }
        },
        {
          "sentences": [
            "<open> <area> (窗帘 | 卷帘 | 百叶窗)",
            "[<let>] <area> (窗帘 | 卷帘 | 百叶窗) <open>"
          ],
          "slots": {
            "domain": "cover",
            "device_class": [
              "blind",
              "curtain",
              "shutter"
            ]
          },
          "response": "cover_area"
        },
        {
          "sentences": [
            "<open> <area> ([卷闸]门)",
            "[<let>] <area> ([卷闸]门) <open>"
          ],
          "slots": {
            "domain": "cover",
            "device_class": "garage"
          },
          "response": "cover_door"
        },
        {
          "sentences": [
            "<open> <area> (窗户)",
            "[<let>] <area> (窗户) <open>"
          ],
          "slots": {
            "domain": "cover",
            "device_class": "window"
          },
          "response": "cover_window"
        },
        {
          "sentences": [
            "<turn_on> <area> (风扇 | 吊扇)",
            "[<let>] <area> (风扇 | 吊扇) <turn_on>"
          ],
          "slots": {
            "domain": "fan",
            "name": "all"
          },
          "response": "fans_area"
        },
        {
          "sentences": [
            "<turn_on> [<area>] {name}",
            "[<let>] [<area>] {name} <turn_on>"
          ],
          "excludes_context": {
            "domain": "cover"
          }
        }
      ]
    }
  },
  "settings": {
    "ignore_whitespace": true
  },
  "responses": {
    "errors": {
      "no_intent": "抱歉，我不能理解",
      "no_area": "找不到名为 {{ area }} 的区域",
      "no_domain": "{{ area }} 中找不到 {{ domain }}",
      "no_device_class": "{{ area }} 中找不到 {{ device_class }}",
      "no_entity": "找不到名为 {{ entity }} 的实体",
      "handle_error": "处理意图时发生意外错误"
    },
    "intents": {
      "HassGetState": {
        "one": "{{ slots.name }}现在是 {{ state.state_with_unit }}",
        "one_yesno": "{% if query.matched: %}\n是的\n{% else: %}\n不，{{ slots.name }}是{{ state.state }}的\n{% endif %}\n",
        "any": "{% if query.matched: %}\n是的，{{ query.matched | map(attribute=\"name\") | sort | join(\"、\") }}{{ slots.state }}\n{% else: %}\n没有\n{% endif %}\n",
        "all": "{% if not query.unmatched: %}\n是的\n{% else: %}\n不，{{ query.unmatched | map(attribute=\"name\") | sort | join(\"、\") }}没有{{ slots.state }}\n{% endif %}\n",
        "which": "{% if not query.matched: %}\n没有\n{% else: %}\n{{ query.matched | map(attribute=\"name\") | sort | join(\"、\") }}{{ slots.state }}\n{% endif %}\n",
        "how_many": "{{ query.matched | length }}\n"
      },
      "HassTurnOff": {
        "default": "{{ slots.name }}已关闭",
        "lights_area": "{{ slots.area }}灯已关闭",
        "fans_area": "{{ slots.area }}风扇已关闭",
        "cover_area": "{{ slots.area }}窗帘已关闭",
        "cover_door": "{{ slots.area }}门已关闭",
        "cover_window": "{{ slots.area }}窗户已关闭"
      },
      "HassTurnOn": {
        "default": "{{ slots.name }}已打开",
        "lights_area": "{{ slots.area }}灯已打开",
        "fans_area": "{{ slots.area }}风扇已打开",
        "cover_area": "{{ slots.area }}窗帘已打开",
        "cover_door": "{{ slots.area }}门已打开",
        "cover_window": "{{ slots.area }}窗户已打开"
      }
    }
  },
  "lists": {
    "color": {
      "values": [
        {
          "in": "白色",
          "out": "white"
        },
        {
          "in": "黑色",
          "out": "black"
        },
        {
          "in": "红色",
          "out": "red"
        },
        {
          "in": "橙色",
          "out": "orange"
        },
        {
          "in": "黄色",
          "out": "yellow"
        },
        {
          "in": "绿色",
          "out": "green"
        },
        {
          "in": "蓝色",
          "out": "blue"
        },
        {
          "in": "紫色",
          "out": "purple"
        },
        {
          "in": "棕色",
          "out": "brown"
        }
      ]
    },
    "brightness": {
      "range": {
        "type": "percentage",
        "from": 0,
        "to": 100
      }
    },
    "temperature": {
      "range": {
        "type": "temperature",
        "from": 0,
        "to": 100
      }
    },
    "temperature_unit": {
      "values": [
        {
          "in": "(摄氏度 | °C | ℃ | 度)",
          "out": "celsius"
        },
        {
          "in": "(华氏度 | °F | ℉)",
          "out": "fahrenheit"
        }
      ]
    },
    "brightness_level": {
      "values": [
        {
          "in": "最(亮 | 高 | 大)",
          "out": 100
        },
        {
          "in": "最(暗 | 低 | 小)",
          "out": 1
        }
      ]
    },
    "on_off_states": {
      "values": [
        {
          "in": "(打开 | 开着 | 开了)[的]",
          "out": "on"
        },
        {
          "in": "(关闭 | 关着 | 关了)[的]",
          "out": "off"
        }
      ]
    },
    "on_off_domains": {
      "values": [
        {
          "in": "(灯 | 吸顶灯 | 筒灯 | 射灯 | 台灯 | 床头灯 | 灯光)",
          "out": "light"
        },
        {
          "in": "(风扇 | 电扇 | 塔扇 | 吊扇)",
          "out": "fan"
        },
        {
          "in": "(开关 | 电源 | 插座 | 通断器)",
          "out": "switch"
        }
      ]
    },
    "cover_states": {
      "values": [
        {
          "in": "(打开 | 开着 | 开了) [的]",
          "out": "open"
        },
        {
          "in": "(关闭 | 关着 | 关了) [的]",
          "out": "closed"
        },
        {
          "in": "打开中",
          "out": "opening"
        },
        {
          "in": "关闭中",
          "out": "closing"
        }
      ]
    },
    "cover_classes": {
      "values": [
        {
          "in": "(遮阳 | 雨)(蓬 | 棚)",
          "out": "awning"
        },
        {
          "in": "(百叶窗 | 百叶帘 | 卷帘)",
          "out": "blind"
        },
        {
          "in": "窗帘",
          "out": "curtain"
        },
        {
          "in": "(门 | 房门)",
          "out": "door"
        },
        {
          "in": "车库门",
          "out": "garage"
        },
        {
          "in": "(大门 | 院子门 | 铁门)",
          "out": "gate"
        },
        {
          "in": "遮阳帘",
          "out": "shade"
        },
        {
          "in": "百叶窗户",
          "out": "shutter"
        },
        {
          "in": "窗户",
          "out": "window"
        }
      ]
    }
  },
  "expansion_rules": {
    "name": "{name}[的]",
    "area": "{area}[的]",
    "let": "[把 | 将 | 让 | 给]",
    "all": "(全部 | 所有)[的]",
    "what_is": "是什么",
    "how_many_is": "(是多少 | 有多少 | 有几个)",
    "which": "[有 | 有没有]哪(个 | 些)",
    "brightness": "[百分之]{brightness}[%]",
    "to": "(为 | 到 | 成 | 至)",
    "set_to": "(设置 | 设定 | 调节 | 调 | 设)(为 | 到 | 至)",
    "turn_on": "(打开 | 开启 | 开)",
    "turn_off": "(关闭 | 关掉 | 关了 | 关)",
    "open": "(打开 | 开)",
    "close": "(关闭 | 关掉 | 关了 | 关)",
    "light": "(灯 | 吸顶灯 | 筒灯 | 射灯 | 台灯 | 床头灯 | 灯光)[的]",
    "temp": "温度",
    "temperature": "{temperature}[{temperature_unit}]"
  },
  "skip_words": []
}